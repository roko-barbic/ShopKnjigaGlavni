@model List<Product>


<div class="container">
    <div class="row" pt-4>
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> Create new Product
            </a>
        </div>
    </div>
</div>
<table class="table table-boarded table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Author
            </th>
          
            <th>
                ISBN
            </th>
        
            <th>
                Price
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <th>
                    @book.Title
                </th>
                <th>
                    @book.Author
                </th>
                
                <th>
                    @book.ISBN
                </th>
                
                <th>
                    @book.ListPrice
                </th>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-productId="@book.Id" class="btn btn-secondary mx-2">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-productId="@book.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>